<!DOCTYPE html>
<html lang="en">
<!-- Vista parcial del head -->
<%- include('./partials/head-index.ejs') %>

<body>
  <!-- Vista parcial del header -->
  <%- include('./partials/header.ejs') %>
  

  <!--==============================content=================================-->
  <div class="content top-1 bot-1">
    <div class="container"> 
      <div class="row">
         <div class="span12 block-1">
           <h2><%=category.name%></h2>
         </div>
      </div>
  </div>
    <% sectionArray.forEach(section => {%>
      <% if (category.categoryId == section.categoryId){%>
        <h2><%=section.name%></h2>
         <ul class="block-3 row">
          <% detailArray.forEach(detail => {%>
            <% if (category.categoryId == detail.categoryId && section.sectionId == detail.sectionId){%>
            <li class="span3" style="margin-bottom: 5%;">
            	<div class="block-3-box maxheight">
                	<a class="magnifier" href="<%=detail.img%>"><img src="<%=detail.img%>" alt=""></a>
                    <div class="caption maxheight4"><a href="/detalle/<%=detail.id%>"><%=detail.name%></a></div>
                </div>
                <%=detail.description%>  <br>
                <a href="/detalle/<%=detail.id%>" class="btn">saber más</a>
            </li>
            <% }%>
          <% })%>
         </ul>
      <% }%>
    <% })%>
    <div class="content top-1 bot-1">
      <div class="container"> 
        <div class="row">
           <div class="span12 block-1">
            <a class="btn" href="/cotizacion">Solicite su cotización</a>
           </div>
        </div>
    </div>
    </div>       
  </div>       
<!--==============================footer=================================-->
<!-- Vista parcial del footer -->
<%- include('./partials/footer.ejs') %>
<script src="/js/bootstrap.js"></script>
</body>
</html>